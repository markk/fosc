/* ------------------------------------------------------------------------------------------------------------

TITLE:: FoscHeaderBlock


SUMMARY:: Returns a FoscHeaderBlock.


DESCRIPTION:: A LilyPond file header block.


USAGE::

'''
code::
a = FoscHeaderBlock();
a.name;
a.title_("Missa sexti tonus");
a.composer_("Josquin");
a.format;
'''
------------------------------------------------------------------------------------------------------------ */
FoscHeaderBlock : FoscBlock {
    ///////////////////////////////////////////////////////////////////////////////////////////////////////////
    // INIT
    ///////////////////////////////////////////////////////////////////////////////////////////////////////////
    *new {
      ^super.new('header');
    }
    ///////////////////////////////////////////////////////////////////////////////////////////////////////////
    // PUBLIC INSTANCE PROPERTIES
    ///////////////////////////////////////////////////////////////////////////////////////////////////////////
    /* --------------------------------------------------------------------------------------------------------
    • composer
    -------------------------------------------------------------------------------------------------------- */
    composer_ { |string|
        var markup, key;
        markup = FoscMarkup(string);
        //key = thisMethod.name.asString.strip("_");
        vars['composer'] = markup;
    }
    /* --------------------------------------------------------------------------------------------------------
    • title
    -------------------------------------------------------------------------------------------------------- */
    title_ { |string|
        var markup, key;
        markup = FoscMarkup(string);
        //key = thisMethod.name.asString.strip("_");
        vars['title'] = markup;
    }
}
